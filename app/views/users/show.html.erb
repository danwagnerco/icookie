<div class="page-header">
  <%= profile_image_for(@user) %>
  <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
</div>
<div class="row">
  <div class="col-sm-4">
    <ul class="list-group">
      <li class="list-group-item"><%= @user.email %></li>
      <li class="list-group-item"><%= @user.zip %></li>
      <% if @user.report_detail == "full" %>
        <li class="list-group-item">The Whole Enchilada</li>
      <% else %>
        <li class="list-group-item">Temperatures Only</li>
      <% end %>
    </ul>
  </div>
</div>
<%= link_to "Edit Account", edit_user_path(@user), class: "btn btn-primary" %>
<%= link_to "Delete Account", @user, 
            :method => :delete,
            :data => { :confirm => "Are you sure you want to delete your account?" } %>
